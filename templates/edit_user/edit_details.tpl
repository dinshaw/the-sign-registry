<!-- <%$smarty.template%> --><%include file="header.tpl" page_title="The Sign Registry" currPage=$smarty.template%><div id="reg"><h2 class="lr">EDIT YOUR PROFILE DETAILS HERE</h2><h3>Click <a href="?mode=changePassword&sid=<%$sid%>">here</a> to change your password.</h3><p class='red'><%$msg|nl2br%></p><form action="user.php?sid=<%$sid%>" method="post"><input type="hidden" name="mode" value="editProfile" /><input type="hidden" name="userID" value="<%$userID%>" /><fieldset><legend>YOUR INFORMATION</legend><!-- if there is no session for the registrant then colect registratn details --><table class="form"> 		<tr>		<th><span class="error">*</span> Email / Username</th>		<td><input  type="text" class="text" name="email" value="<%$email%>" /></td>		<th><span class="error">*</span> Street Address</th>		<td><input  type="text" class="text" name="address" value="<%$address%>" /></td>	</tr>		<tr>		<th><span class="error">*</span> Phone</th>		<td><input  type="text" class="text" name="tel" value="<%$tel%>" /></td>		<th><span class="error">*</span> City</th>		<td><input  type="text" class="text" name="city" value="<%$city%>" /></td>	</tr>		<tr>		<th>(Other Phone)</th>		<td><input  type="text" class="text" name="tel2" value="<%$tel2%>" /></td>		<th><span class="error">*</span> State / Province</th>		<td><select name="state" class="text">		<%include file="inc/statesSelect.tpl" value="$state"%>		</select></td>				</tr>		<tr>		<th><span class="error">*</span> Country</th>		<td><select name="country" class="text">		<%include file="inc/countrySelect.tpl" value="$country"%>		</select></td>		<th><span class="error">*</span> Zip</th>		<td><input  type="text" class="dollar" name="zip" value="<%$zip%>" /></td>	</tr></table></fieldset>	<div class="lr"><span><input type="submit" name="save" value="Save Changes" class="button" /></span></div></form></div><%include file="footer.tpl"%>