<!-- <%$smarty.template%> --><%include file="admin/admin_header.tpl" pageTitle="Red Rock West Saloon - NYC"%><div id="centercontent"><div id="adminTitle" class="title"><h1>Adminn Area</h1></div>	<h1 class="top">Add and edit Photo Albums here.</h1><!-- start previews area --><%if $edit %><fieldset>	<legend>Preview your entry here:</legend>	<div class="item">		<h3><%$title%></h3>		<%if $imgName %><img src="userimages/<%$imgName%>" width="150"><%/if%>		<p><%$body%></p>		<p>$<%$price%></p>	</div></fieldset><%/if%><!-- end preview area --><p class="error"><%$msg|nl2br%></p><form action="admin.php" method="post" enctype="multipart/form-data" name="items" onsubmit="return submitForm();"><input type="hidden" name="MAX_FILE_SIZE" value="10000000"><input type="hidden" name="mode" value="albums"><input type="hidden" name="action" value="add"><script language="JavaScript" type="text/javascript"><!--function submitForm() {//make sure hidden and iframe values are in sync before submitting formupdateRTE('body'); //use this when syncing only 1 rich text editor ("rtel" is name of editor)//updateRTEs(); //uncomment and call this line instead if there are multiple rich text editors inside the form//alert("Submitted value: "+document.emailForm.bodyContent.value) //alert submitted valuereturn true; //Set to false to disable form submission, for easy debugging.}//Usage: initRTE(imagesPath, includesPath, cssFile)initRTE("templates/img/rte/", "templates/rte/", "inc/css/");//--></script><!-- set the imageID for editing --><%if $edit %><input type="hidden" name="imageID" value="<%$imageID%>"><input type="hidden" name="editID" value="<%$editID%>"><%/if%><div class="input">	<h3>		<%if edit %>			<%if $imgName %>				Change			<%else%>				Add			<%/if%>		<%/if%> Image:	</h3><input type="file" name="image">	<%if $edit && $imgName %>		<h3>Remove Image:<input type="checkbox" name="removeImage" value="true" onChange="alert('Remove image from this entry?');"></h3>	<%/if%>	<h3>Title:</h3>	<p><input type="text" name="title" class="title" value="<%$title%>"></p>		<h3>Description:</h3>	<p><script language="JavaScript" type="text/javascript">	<!--	//Usage: writeRichText(fieldname, html, width, height, buttons, readOnly)	writeRichText('bodyContent','<%$bodyContent%>', 400, 50, true, false);	//-->	</script>	</p>	<!-- if in add mode, fabricate what would be the next display value with if $totalCount + 1 -->	<h3>Display: <input type="text" name="display" value="<%if !$display%><%$totalCount+1%><%else%><%$display%><%/if%>" class="num"> / <%if !$display%><%$totalCount+1%><%else%><%$totalCount%><%/if%></h3>	<%if $edit %>		<div class="lr"><input type="submit" name="update" value="UPDATE">			<span><input type="submit" name="confirm" value="CONFIRM"></span>		</div>	<%else%>		<input type="submit" name="add" value="Add">	<%/if%></div></form><%section name=itemList loop=$itemLoop%>	<form action="admin.php" method="post">	<input type="hidden" name="mode" value="items">	<input type="hidden" name="editID" value="<%$itemLoop[itemList].id%>">	<input type="hidden" name="cat_id" value="<%$cat_id%>">	<input type="hidden" name="imageID" value="<%$itemLoop[itemList].imageID%>">	<div class="item">	<h3><%$itemLoop[itemList].title%></h3>	<img src="userimages/<%$itemLoop[itemList].imgName%>">	<p><%$itemLoop[itemList].body%></p>	<p>price $<%$itemLoop[itemList].price%></p>	<input type="submit" name="edit" value="EDIT">	<input type="submit" name="delete" value="DELETE">	</form>	</div><%/section%></div><%include file="admin/admin_footer.tpl" currPage=$smarty.template%>